#       make \
#       netcat-openbsd \
#       nodejs \
#       openssl \
#       pkgconfig \
#       postgresql-dev \
#       python \
#       tzdata \
#       yarn

RUN gem install bundler -v ${BUNDLER_VERSION}

# Generate work directory
RUN mkdir /app
WORKDIR /app

# Copy Config
COPY ./compose/ruby/config/Gemfile ./
COPY ./compose/ruby/config/Gemfile.lock ./

RUN bundle config build.nokogiri --use-system-libraries

# Generate project
RUN bundle check || bundle install

# COPY package.json yarn.lock ./

# RUN yarn install --check-files

# Add source to project
COPY . ./

ENTRYPOINT ["./compose/ruby/entrypoint.sh"]