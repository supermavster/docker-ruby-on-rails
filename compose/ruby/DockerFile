FROM ruby:2.5.1-alpine

# ENV
ENV BUNDLER_VERSION=2.0.2

# Add dependencies
RUN apt-get update -qq
RUN apt-get install -y build-essential libpq-dev sqlite3 nodejs yarn

# RUN apk add --update --no-cache \
#       binutils-gold \
#       build-base \
#       curl \
#       file \
#       g++ \
#       gcc \
#       git \
#       less \
